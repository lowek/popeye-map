{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ES2020",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
  ],
  "types": [
    "typePatches"
  ]
}

